@page
@model RazorApp.Pages.Product.UpdateProductModel
@{
    ViewData["Title"] = "Update Product";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <input type="hidden" asp-for="Product.Id" />

            <div class="form-group">
                <label asp-for="Product.ProductName">Product Name:</label>
                <input asp-for="Product.ProductName" class="form-control"/>
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description">Description:</label>
                <input asp-for="Product.Description" class="form-control"/>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price">Price:</label>
                <input asp-for="Product.Price" class="form-control"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MarketId">Market Id:</label>
                <input asp-for="Product.MarketId" class="form-control"/>
                <span asp-validation-for="Product.MarketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId">Category Id:</label>
                <input asp-for="Product.CategoryId" class="form-control"/>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <!-- Добавьте другие поля DTO здесь, если необходимо -->

            <button type="submit" class="btn btn-primary">Update Product</button>
            <a asp-page="/Product/GetProducts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
